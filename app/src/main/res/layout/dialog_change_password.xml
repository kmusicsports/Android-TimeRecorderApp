<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/cp_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_new_password"
        android:autofillHints="@string/hint_new_password"
        android:inputType="textPassword"
        android:layout_margin="10sp">
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/cp_edit_text_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_new_password_again"
        android:autofillHints="@string/hint_new_password_again"
        android:inputType="textPassword"
        android:layout_margin="10sp"/>

</LinearLayout>