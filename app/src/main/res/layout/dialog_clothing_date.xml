<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cd_d_label" />

        <TextView
            android:id="@+id/cd_d_text_clothing_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_default" />
    </LinearLayout>


    <Spinner
        android:id="@+id/cd_d_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:entries="@array/spinner_day_items"
        android:prompt="@string/spinner_day_prompt"
        android:layout_margin="15dp" />

</LinearLayout>